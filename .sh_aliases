alias mvn="mvnd"

# git
alias g="git"
alias lgit="lazygit"

# conda
alias ae="activate"
alias de="deactivate"
alias cae="conda activate"
alias cde="conda deactivate"
alias load_conda='export PATH="$HOME/miniconda3/bin:$PATH" && source $HOME/miniconda3/etc/profile.d/conda.sh'

